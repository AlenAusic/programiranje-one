#include <iostream>
using namespace std;

// Napisati program koji ucitava dvocifreni broj i
// ispisuje sumu cifara.

int main() {
	int broj;
	int sumaCifara = 0;
	int pomocna1 = 0;
	int pomocna2 = 0;

	cout << "Unesite dvocifreni broj: " << endl;
	cin >> broj;

	if (broj >= 10 && broj <= 99) {
		pomocna1 = broj / 10;
		pomocna2 = broj % 10;

		sumaCifara = pomocna1 + pomocna2;

		cout << "Suma cifara unesenog dvocifrenog broja iznosi: " << sumaCifara << endl;
	}
	else
		cout << "Uneseni broj nije dvocifren!" << endl;

	return 0;
	system("pause=0");
}
